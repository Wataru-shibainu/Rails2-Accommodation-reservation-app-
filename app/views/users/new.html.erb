<h3>新規登録</h3>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :email ,"メールアドレス" %></th>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <th><%= f.label :input_password ,"パスワード" %></th>
      <td><%= f.text_field :input_password %></td>
    </tr>

    <tr>
      <th><%= f.label :confirmation_password ,"確認用パスワード" %></th>
      <td><%= f.text_field :confirmation_password %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "新しいアカウントを作成"%></li>
      <li><%= link_to "アカウントをお持ちの方はログイン", :users %></li>
    </ul>
  </div>
<% end %>

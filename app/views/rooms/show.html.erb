<p>施設詳細</p>
<p><%= link_to "← 戻る", :back %></p>
<p><%= link_to "編集", edit_room_path(@room.id) %></p>
<div>
  <% if @room.hotel_image? %>
    <%= image_tag @room.hotel_image.url, class:"hotel_image" %>
  <% else %>
    <%= image_tag "default_hotel_image.png", class:"hotel_image" %>
  <% end %>
</div>
<div>
  <p><%= @room.hotel_name %></p>
  <p><%= @room.hotel_detail %></p>
  <p><%= @room.price %></p>
  <p><%= @room.address %></p>
</div>
<% if user_signed_in? %>
  <%= render 'shared/room_details_page_for_logged_in_users' %>
<% else %>
  <%= render 'shared/room_details_page_for_non_logged_in_users' %>
<% end %>

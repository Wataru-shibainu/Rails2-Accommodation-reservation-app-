<p>検索結果表示</p>

<div>
  <% @rooms.each do |room| %>
    <div>
           <% if room.hotel_image? %>
             <%= image_tag room.hotel_image.url, class:"hotel_image" %>
           <% else %>
             <%= image_tag "default_hotel_image.png", class:"hotel_image" %>
           <% end %>
    </div>
      
    <div>
         <p><%= room.hotel_name %></p>
         <p><%= room.hotel_detail %></p>
         <p><%= room.price %></p>
         <p><%= room.address %></p>
    </div>
  <% end %>
</div>
    
 
   





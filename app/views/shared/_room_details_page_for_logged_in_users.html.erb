  <%= form_with model: @reservation, url:reservations_confirm_path do |f| %>
  <%= f.label :check_in_date ,"チェックイン" %>
  <%= f.date_field :check_in_date %>
  <% if flash[:check_in_error] %>
    <p class="confirm"><%= flash[:check_in_error] %></p>
  <% end %>
  <%= f.label :check_out_date ,"チェックアウト" %>
  <%= f.date_field :check_out_date %>
  <% if flash[:check_out_error] %>
    <p class="confirm"><%= flash[:check_out_error] %></p>
  <% end %>
  <% if flash[:check_out_past] %>
    <p class="confirm"><%= flash[:check_out_past] %></p>
  <% end %>
  <%= f.label :reservation_number_of_people ,"人数" %>
  <%= f.text_field :reservation_number_of_people %>
  <% if flash[:reservation_number_error] %>
    <p class="confirm"><%= flash[:reservation_number_error] %></p>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit "予約確認画面へ"%>
<% end %>
